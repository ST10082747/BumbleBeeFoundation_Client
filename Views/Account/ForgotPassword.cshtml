@model BumbleBeeFoundation_Client.Models.ForgotPasswordViewModel

<link rel="stylesheet" href="~/css/bumblebee-theme.css" />

<div class="forgot-password-container">
    <h2 class="forgot-password-title">Forgot Password</h2>

    <form asp-action="ForgotPassword" method="post" class="forgot-password-form">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-bumblebee">Submit</button>
    </form>

    <div class="forgot-password-links">
        <p>Remembered your password? <a asp-action="Login">Log in here</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


