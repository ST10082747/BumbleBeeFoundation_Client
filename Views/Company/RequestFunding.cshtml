@model FundingRequestViewModel

<link href="~/css/bumblebee-theme.css" rel="stylesheet" />
<style>
   
    .funding-request-form {
        background-color: #fffbea;
        border: 2px solid #388e3c; 
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(255, 223, 0, 0.2); 
        max-width: 500px;
        margin: 0 auto;
    }

    h2 {
        text-align: center;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        color: #388e3c;
    }

    .form-control {
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        width: 100%;
        margin-top: 20px;
    }

    .form-text {
        font-size: 0.9em;
        color: #666;
    }
</style>

<h2 class="my-4">Request Funding</h2>
<div class="funding-request-form">
<form asp-action="RequestFunding" method="post" enctype="multipart/form-data" class="p-4 border rounded shadow-sm">
    <div class="form-group mb-3">
        <label asp-for="CompanyName" class="form-label">Company Name</label>
        <input asp-for="CompanyName" class="form-control" placeholder="Enter your company name" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProjectDescription" class="form-label">Project Description</label>
        <textarea asp-for="ProjectDescription" class="form-control" placeholder="Describe the project"></textarea>
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RequestedAmount" class="form-label">Requested Amount (R)</label>
        <input asp-for="RequestedAmount" class="form-control" placeholder="Enter the amount in Rands" />
        <span asp-validation-for="RequestedAmount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProjectImpact" class="form-label">Project Impact</label>
        <textarea asp-for="ProjectImpact" class="form-control" placeholder="Explain the expected impact of the project"></textarea>
        <span asp-validation-for="ProjectImpact" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="attachments" class="form-label">Attachments</label>
        <input type="file" name="attachments" id="attachments" multiple class="form-control-file" />
        <small class="form-text text-muted">Please upload proof of project planning, licenses, quotations, registration, and proof of a bank account.</small>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Submit Request</button>
</form>
</div>