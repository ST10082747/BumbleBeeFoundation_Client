@model CompanyViewModel
@{
    ViewData["Title"] = "Company Dashboard";
}
<link href="~/css/bumblebee-theme.css" rel="stylesheet" />

<style>
   
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }

    .dashboard-wrapper {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        gap: 20px;
        margin: 30px auto;
        max-width: 1200px; 
    }

    .dashboard-container {
        background-color: #fffbea;
        border: 2px solid #388e3c; 
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(255, 223, 0, 0.2); 
        width: 100%;
        max-width: 500px; 
        margin: 0 auto;
    }

    h3 {
        font-size: 1.5rem;
        color: #2c3e50;
        border-bottom: 2px solid #f1c40f;
        padding-bottom: 5px;
        margin-bottom: 15px;
    }

    dl.row {
        display: block;
    }

        dl.row dt,
        dl.row dd {
            font-size: 1rem;
            margin: 10px 0;
        }

        dl.row dt {
            font-weight: bold;
            color: #34495e;
        }

        dl.row dd {
            color: #2c3e50;
            margin-left: 0;
        }

    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            margin: 10px 0;
        }

            ul li a,
            .btn-success {
                background-color: #388e3c; 
                color: #fff;
                font-weight: bold;
                padding: 10px 15px;
                display: inline-block;
                text-align: center;
                text-decoration: none;
                border-radius: 8px;
                transition: background-color 0.3s ease;
                border: none;
                width: 200px;
            }



                ul li a:hover,
                .btn-success:hover {
                    background-color: #fbc02d; 
                    color: #333;
                }

    @@media (max-width: 768px) {
        .dashboard-wrapper {
            flex-direction: column;
            align-items: center;
        }

        .dashboard-container {
            width: 80%;
        }
    }

</style>

<h1 class="text-center company-dashboard-title">@ViewData["Title"]</h1>

@if (Model != null)
{
    <div class="dashboard-wrapper">
       
        <div class="dashboard-container">
            <h3>Company Information</h3>
            <dl class="row">
                <dt>Company Name</dt>
                <dd>@Model.CompanyName</dd>
                <dt>Contact Email</dt>
                <dd>@Model.ContactEmail</dd>
                <dt>Contact Phone</dt>
                <dd>@Model.ContactPhone</dd>
                <dt>Date Joined</dt>
                <dd>@Model.DateJoined.ToString("yyyy-MM-dd")</dd>
                <dt>Status</dt>
                <dd>@Model.Status</dd>

                @if (Model.Status == "Rejected")
                {
                    <dt>Rejection Reason</dt>
                    <dd>@Model.RejectionReason</dd>
                }
            </dl>
        </div>

        <div class="dashboard-container">
            <h3>Quick Actions</h3>
            <ul>
                <li><a asp-action="RequestFunding">Request Funding</a></li>
                <li><a asp-action="FundingRequestHistory">View Funding Request History</a></li>
            </ul>
            <a asp-controller="Donor" asp-action="Donate" class="btn btn-success my-2">Donate as a Company</a> <!-- Added donate button -->
        </div>
    </div>
}
else
{
    <p style="text-align:center;">No company information available.</p>
}