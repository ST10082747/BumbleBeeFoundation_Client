@model IEnumerable<FundingRequestViewModel>
@{
    ViewData["Title"] = "Funding Request History";
}

<h2 class="my-4">@ViewData["Title"]</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Request ID</th>
                <th>Project</th>
                <th>Submitted At</th>
                <th>Requested Amount (R)</th>
                <th>Status</th>
                <th>Admin Message</th>
                <th>Project Completed? Upload Documents For Review</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RequestID</td>
                    <td>@item.ProjectDescription</td>
                    <td>@item.SubmittedAt.ToString("yyyy-MM-dd")</td>
                    <td>R @item.RequestedAmount.ToString("N2")</td>
                    <td>@item.Status</td>
                    <td>@item.AdminMessage</td>
                    <td>
                        @if (item.Status == "Approved")
                        {
                            <form asp-action="UploadDocument" asp-route-requestId="@item.RequestID" method="post" enctype="multipart/form-data" class="d-inline">
                                <input type="file" name="document" class="form-control" required />
                                <button type="submit" class="btn btn-primary mt-2">Upload Document</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>