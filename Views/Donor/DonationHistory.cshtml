@model IEnumerable<DonationViewModel>
@{
    ViewData["Title"] = "Donation History";
}
<link href="~/css/bumblebee-theme.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container mt-4">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info">
            <p class="mb-0">@ViewBag.Message</p>
        </div>
    }

    <div class="text-center mb-4">
        <h1 class="donation-history-title">@ViewData["Title"]</h1>
        <a href="@Url.Action("DownloadDonationHistory", "Donor")"
           class="btn btn-primary mt-2">
            <i class="bi bi-download"></i> Download PDF Report
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Donation ID</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Donor Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DonationId</td>
                        <td>@item.DonationDate.ToString("yyyy-MM-dd")</td>
                        <td>@item.DonationType</td>
                        <td>@item.DonationAmount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</td> <!-- Ensure ZAR formatting -->
                        <td>@item.DonorName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>